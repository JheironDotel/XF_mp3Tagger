<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mp3TaggerMusic.FileListPage">

    <!--ItemTapped="listView_ItemTapped"
              ItemSelected="listView_ItemSelected"
              IsPullToRefreshEnabled="True"
              Refreshing="listView_Refreshing"-->
    <StackLayout>
        <Button x:Name="btnFileSel" Clicked="btnFileSel_Clicked" Text="Selecionar Archivo de Audio"></Button>
        <Button x:Name="btnFileSelPath" Clicked="btnFileSelPath_Clicked" Text="Selecionar Ubicacion Archivos de Audio"></Button>


        <ListView x:Name="lvTracksFiles" SeparatorVisibility="Default" SeparatorColor="Blue" Refreshing="lvTracksFiles_Refreshing" IsPullToRefreshEnabled="True" ItemTapped="lvTracksFiles_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextCell Text="{Binding NameFile}" Detail="{Binding Path}"/>-->
                    <ImageCell Text="{Binding SongName}" Detail="{Binding ArtistName}" ImageSource="{Binding AlbumCover}"/>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </StackLayout>
</ContentPage>